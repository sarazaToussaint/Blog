<article class="post-snipet">
    <h3><%= @post.Title %>  by <%= @post.author.Name %></h3>
    <div class="post-stats">
      <span>Comments <%= @post.CommentsCounter %> &nbsp;,&nbsp;</span>
      <span>Likes <%= @post.LikesCounter %></span>
    </div>
    <p><%= @post.Text %></p>
  </article>
  <ul class="comments">
    <% @post.recent_comment.each do |comment| %>
      <li><%= comment.author.Name %>: <%= comment.Text %>
    <% end %>
  </ul>
