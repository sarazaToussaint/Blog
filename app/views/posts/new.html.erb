<%= form_for @post, url: user_posts_path do |f| %>
<h2>Create new post article</h2>
  <% if @post.errors.any? %>
    <ul class="errors">
      <% @post.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <%= f.hidden_field :authorId, value: @params ? @params['user_id'] : '' %>
  <div>
    <%= f.label :Title %><br />
    <%= f.text_field :Title, placeholder: 'Article title' %>
  </div>
  <div>
    <%= f.label :Text, "Description" %><br />
    <%= f.text_area :Text, placeholder: 'Type your article message in here...' %>
  </div>
  <%= f.submit "Submit post", disable_with: 'Submiting...' %>
<% end %> 
