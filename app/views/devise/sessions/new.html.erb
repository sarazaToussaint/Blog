<section class='login-container'>
  <div class='login'>
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'User-email', class: 'email' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:'User-password', class: 'password'  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'login-btn' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>